<div class="page-content page-container" id="page-content">
    <div class="row container d-flex justify-content-center">
      <div class="col-md-8">
        <h3 class="text-info "><img src="../images/minilogo.png" class="img-thumbnail bg-transparent border-0" alt="logo image">  Hola {{ currentUser.nickname }}</h3>
          <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
              <div class="col-sm-4 bg-warning user-profile">
                <div class="card-block text-center text-white">
                  
                   <h4 class="m-b-20 p-b-5 b-b-default f-w-600 text-white ">{{ user.nickname }}</h4>
                    <div class="m-b-25">
                      <img class="img-fluid" src={{ user.avatar }} alt="Imagen del usuario">
                    </div>
                  </div>
                </div>
                <div class="col-sm-8">
                  <div class="card-block">
                    <h4 class="m-b-20 p-b-5 b-b-default f-w-600 text-warning mt-3">Perfil de {{ user.nickname }}</h4>
                      <div class="row">
                        <div class="col-sm-6">
                          <p class="m-b-10 f-w-600">Email</p>
                          <h6 class="text-muted f-w-400">{{ user.email }}</h6>
                        </div>
                        <div class="col-sm-6">
                          <p class="m-b-10 f-w-600">Teléfono de contacto</p>
                          <h6 class="text-muted f-w-400">{{ user.phoneNumber }}</h6>
                        </div>
                      </div>

                      <hr>

                      <p class="text-muted font-size-sm">{{ user.bio }}</p>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<hr>
                       {{!-- Historial de tratos --}}

                       
<h3 class="text-info text-center m-5">Historial de tratos de {{ user.nickname }}</h3>
{{#each services as | service | }}
<div class="page-content page-container" id="page-content">
  <div>
    <div class="row container d-flex justify-content-center">
      <div class="card mb-3" style="max-width: 600px;"> 
        <div class="row g-0">
          <div class="col-md-6">
            <img src={{ this.avatar }} alt="Imagen del usuario">
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h5 class="card-text">{{ service.title }}</h5>
              <p class="card-text">{{ service.description }}</p>
              <p class="card-text"><small class="text-muted">{{ service.antCoins }} Antcoins</small></p>
              <div class="d-flex justify-content-end">{{ deal.status }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each }}

<div class="col-md-16 mb-5 pb-5">
  <div class="d-flex flex-column align-items-center text-center">
    <h5 class="card-title m-4">Reseñas</h5>
      {{#each reviews as | review | }}
        <div class="col-16">
          <div class="card" style="width: 30rem; height: 6rem">
            <div class="card-body">
              <a class="card-title text-decoration-none text-info" href="/users/{{review.idReviewer.id}}">Autor: {{ review.idReviewer.nickname }} </a>
              <p  class="card-title">{{ review.comment }}</p>
            </div>
          </div>
        </div>
      {{/each }}

        
      <form action="/users/{{user.id}}/comments" method="post">
        <div class="card" style="width: 20rem;">
          <textarea type="text" class="form-control" name="comment" value="{{ review.comment }}"></textarea>
        </div>
          <button type="submit" class="btn btn-warning text-white center">Comentar</button>
      </form>
  </div>
</div>
 
