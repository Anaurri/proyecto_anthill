<form method="POST" action="/register">
  <h1>REGISTER</h1>
  <div class="mb-3">
    <label class="form-label">Email</label>
    <input name="email" value="{{ user.email }}" type="email" class="form-control {{#if errors.email }}is-invalid{{/if}}" aria-describedby="emailHelp" autocomplete="off">
    {{#if errors.email }}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
  </div>
  <div class="mb-3">
    <label class="form-label">Contraseña</label>
    <input name="password" type="password" class="form-control  {{#if errors.password }}is-invalid{{/if}}" autocomplete="off">
    {{#if errors.password }}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
    <div id="emailHelp" class="form-text">Debe tener al menos 8 caracteres</div>

  </div>
  <button type="submit" class="btn btn-primary">Crear</button>
</form>

