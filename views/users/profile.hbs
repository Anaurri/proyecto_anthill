<head>
    <link rel='stylesheet' href='/./public/stylesheets/styles.css' />
</head>


{{!-- Perfil del usuario --}}
<div class="page-content page-container mb-5" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-md-8">
                <form action="/profile" method="post">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-info user-profile">
                                <div class="card-block text-center text-white">
                                    <h4 class="m-b-20 p-b-5 b-b-default f-w-600 text-white ">Hola {{ currentUser.nickname }}</h4>
                                        <div class="m-b-25">
                                            <img class="img-fluid" src={{ currentUser.avatar }} alt="Imagen del usuario">
                                        </div>
                                        <div>
                                            <h6 class="text-start text-white">Antcoins disponibles: {{ currentUser.balance }}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h4 class="m-b-20 p-b-5 b-b-default f-w-600 text-info"><img src="images/minilogo.png" class="img-thumbnail bg-transparent border-0" alt="logo image">  Edita tu perfil</h4>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <p class="m-b-10 f-w-600">Email</p>
                                                    <h6 class="text-muted f-w-400">{{ currentUser.email }}</h6>
                                                </div>
                                                <div class="col-sm-6">
                                                    <p class="m-b-10 f-w-600">Teléfono de contacto</p>
                                                    <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="phoneNumber" value="{{ currentUser.phoneNumber }}">
                                                </div>
                                            </div>
                                        
                                        <hr>

                                        <div class="row mb-4">
                                            <div class="col">
                                                <div class="form-outline">
                                                    <label class="form-label" for="form6Example1">Contraseña Nueva</label>
                                                    <input type="password"
                                                        class="form-control {{isInvalid errors.password }}" name="password" placeholder="Password">
                                                    {{formError errors.password }}
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-outline">
                                                    <label class="form-label" for="form6Example2">Confirma Contraseña</label>
                                                    <input type="password" class="form-control {{isInvalid errors.passwordMatch }}" name="passwordMatch" placeholder="Repeat Password">
                                                    {{formError errors.passwordMatch }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <label class="form-label" for="form6Example1">Cuenta algo sobre ti!</h6>
                                        <textarea type="text" class="form-control" name="bio"
                                            placeholder="{{ currentUser.bio }}"
                                            value="{{ currentUser.bio }}"></textarea>

                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-picture-o"></i></span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="avatar-input"
                                                    name="avatarUrl">
                                                <label class="custom-file-label" for="avatar-input">Carga imagen</label>
                                            </div>
                                        </div>
                                        <button type="submit"
                                            class="btn btn-warning text-white btn-block mt-3">Actualizar
                                            perfil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- historial de tratos --}}
                <hr class="m-5">
                <h3 class="text-info text-center pb-5">Tu historial de actividades</h3>
                {{#each deals as |deal| }}
                    {{#dealOwner deal.serviceOwner.id ../currentUser.id }}
                    <div class="card mb-3" style="max-width: 620px;">
                        
                                <div class="row g-0">
                                    <div class="col-md-6">
                                        <img src={{ deal.interestedUser.avatar }} alt="Imagen del usuario">
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-body">
                                            <h5 class="card-title text-info mt-2 mb-2">{{ deal.interestedUser.nickname }} quiere que le eches una mano.</h5>
                                            <h5 class="card-text">{{ deal.service.title }}</h5>
                                            <p class="card-text">{{ deal.service.description }}</p>
                                            <p class="card-text"><small class="text-muted">{{ deal.service.antCoins }} Antcoins</small></p>
                                            <div class="d-flex justify-content-end">

                                                {{#isWaiting deal.status }}
                                                <form action="/profile/{{deal.id}}/accepted" method="POST">
                                                    <button type="submit" class="btn btn-warning text-white center m-1">Aceptar</button>
                                                </form>
                                                <form action="/profile/{{deal.id}}/cancelled" method="POST">
                                                    <button type="submit" class="btn btn-warning text-white center m-1">Cancelar</button>
                                                </form>
                                                {{/isWaiting }}

                                                {{#isAccepted deal.status }}
                                                    <h5 class="text-info">{{ deal.status }}</h5>
                                                {{/isAccepted }}


                                                {{#isCancelled deal.status }}
                                                    <h5 class="text-info">{{ deal.status }}</h5>
                                                {{/isCancelled }}

                                                {{#isEnded deal.status }}
                                                    <form action="/profile/{{deal.id}}/finaliced" method="POST">
                                                    <button type="submit" class="btn btn-warning text-white center">Cobrar servicio</button>
                                                    </form>
                                                {{/isEnded }}

                                                {{!-- {{#isPaid }}
                                                <h5 class="text-info"><i class="bi bi-check color-warning"></i>Finalizado</h5>
                                                {{/isPaid }} --}}

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{else }}

                <h5 class="card-title text-warning">Tu trato con {{ deal.serviceOwner.nickname }}</h5>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src={{ deal.serviceOwner.avatarUrl }} alt="Imagen del usuario">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h6 class="card-text">{{ deal.service.title }}</h6>
                                <p class="card-text">{{ deal.serviceOwner.description }}</p>
                                <p class="card-text"><small class="text-muted">Precio: {{ deal.service.antCoins }}
                                        antCoins</small></p>
                                <div class="d-flex justify-content-end">

                                    {{#isAccepted deal.status }}
                                    <form action="/profile/{{deal.id}}/ended" method="POST">
                                        <button type="submit" class="btn btn-warning text-white center">Finalizar trato
                                            con {{ deal.serviceOwner.nickname}}</button>
                                    </form>
                                    <h5>{{ deal.status }}</h5>
                                    {{/isAccepted }}

                                    {{#isWaiting deal.status }}
                                    <p class="text-secondary mb-2 mt-3">El trato aún está pendiente de aceptación</p>
                                    {{/isWaiting }}


                                    {{#isCancelled deal.status }}
                                    <p class="text-secondary mb-2 mt-3">{{ deal.serviceOwner.nickname}} canceló el
                                        trato.</p>
                                    {{/isCancelled }}


                                    {{#isEnded deal.status }}
                                    <p class="text-secondary mb-2 mt-3"> Trato finalizado con {{
                                        deal.serviceOwner.nickname}}</p>
                                    {{/isEnded }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/dealOwner }}

                {{/each }}
                {{!-- historial de ofertas --}}
                <hr>
                <hr>

                <h4 class="card-title">Tus ofertas</h4>
                {{#each services as | service | }}

                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">

                        <div class="bg-white card mb-4 order-list shadow-sm">
                            <div class="gold-members p-4">
                                <h5 class="mb-3 text-info">{{ service.title }}</h5>
                                <div class="media">

                                    <div class="media-body">
                                        <p class="text-secondary mb-2 mt-3">{{ service.description }}</p>
                                        <hr>
                                        <p class="mb-0 text-black text-info pt-2 fw-bo"><span
                                                class="text-black font-weight-bold">Precio:</span> {{
                                            service.antCoins }}
                                            AntCoins
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                {{!-- historial de reseñas --}}

                <hr>
                <hr>
                {{/each }}
                <h4 class="card-title">Esto es lo que dicen sobre ti</h4>
                {{#each reviews as | review | }}
                <div class="col-16">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="card-body">
                            <p class="card-title">{{ review.comment }}</p>
                            <a class="card-title" href="/users/{{review.idReviewer.id}}">Autor: {{
                                review.idReviewer.nickname }}
                            </a>
                        </div>
                    </div>
                </div>
                {{/each }}
            </div>
        </div>
    </div>
</div>