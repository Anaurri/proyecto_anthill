
<form action="/service/new" method="post" class="col-md-8 mx-auto">
    <div class="d-flex justify-content-start align-items-center pb-5">
        <img src="../images/logo.png" alt="logo Anthill" class="float-start md-2 pb-2">
        <h2 class="font-weight-bold fw-normal text-warning p-3 pb-3">Añadir servicio</h2>
    </div>
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form6Example1">Servicio</label>
                <input type="text" id="form6Example1" class="form-control" name="title" />
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form6Example2">Precio</label>
                <input type="text" id="form6Example2" class="form-control" name="antCoins" />
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form6Example2">¿No sabes qué precio poner?</label>
                <button type="submit" class="btn btn-info text-white btn-block mb-4 ">Equivalencias</button>

            </div>
        </div>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" for="form6Example7">Descripción</label>
        <textarea type="text" class="form-control" name="description"></textarea>
    </div>
    <hr>
    <div class="form-outline mb-4">

        <label class="form-label" for="form6Example7">Añade palabras clave para que encuentren tu servicio</label>
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="keyWords">
        <label class="form-check-label" for="inlineCheckbox1">Idiomas</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="keyWords">
        <label class="form-check-label" for="inlineCheckbox2">Fontanería</label>
    </div>
    <hr>
    <div class="form-outline mb-4">
        <div class="row mb-4">
            <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form6Example2">Usuario</label>
                    <input type="text" id="form6Example1" class="form-control" value="{{ currentUser.nickname }}" />
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form6Example2">Número de contacto</label>
                    <input type="text" id="form6Example2" class="form-control" value="{{ currentUser.phoneNumber }}" />
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form6Example2">email</label>
                    <input type="text" id="form6Example2" class="form-control" value="{{ currentUser.email }}" />
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-warning text-white btn-block mb-4">Añadir Servicio</button>
    </div>
</form>