<link rel="stylesheet" href="https://allyoucan.cloud/cdn/icofont/1.0.1/icofont.css"
    integrity="sha384-jbCTJB16Q17718YM9U22iJkhuGbS0Gd2LjaWb4YJEZToOPmnKDjySVa323U+W7Fv" crossorigin="anonymous">

<div class="container">
    {{#if services}}
    <div class="col-md-9">
        <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane  fade  active show" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                    <h4 class="font-weight-bold mt-0 mb-4">Servicios</h4>
                    {{#each services as |service| }}
                    <div class="bg-white card mb-4 order-list shadow-sm">
                        <div class="gold-members p-4">
                            <h5 class="mb-2">{{ service.title}}</h5>
                            <div class="media">
                                <a href="#">
                                    <img class="mr-4" src="https://bootdey.com/img/Content/avatar/avatar2.png"
                                        alt="Generic placeholder image">
                                </a>
                                <div class="media-body">
                                    <span class="float-right text-info">Usuario<iclass="icofont-check-circled
                                            text-success">
                                            </iclass=></span>
                                    <p class="text-gray mb-1"><i class="icofont-location-arrow"></i> {{
                                        service.description }}</p>
                                    <hr>
                                    <div class="float-right">
                                        {{#itsMe ../currentUser.id service.owner }}
                                        <a class="btn btn-sm btn-outline-primary" href="/service/{{service.id}}/delete"><i class="icofont-headphone-alt"></i> Borrar </a>
                                        {{else}}
                                        <a class="btn btn-sm btn-outline-primary"
                                            href="/users/{{service.owner}}"><i class=" icofont-headphone-alt"></i> Ver Perfil</a>
                                        <a class="btn btn-sm btn-primary" href="#"><i
                                                class="icofont-refresh"></i>Requerir</a>
                                        {{/itsMe}}
                                    </div>
                                    <p class="mb-0 text-black text-primary pt-2"><span
                                            class="text-black font-weight-bold"> Precio:</span> {{ service.antCoins }}
                                        AntCoins
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <hr>
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <a class="btn btn-primary" href="/service/new">AÃ±adir nuevo servicio</a>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>